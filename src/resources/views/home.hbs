<div id="home-container">
<!-- Banner -->
<div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="mask flex-center">
                <div class="container-banner">
                    <div class="row align-items-center">
                        <div class="col-md-6 col-12 order-md-1 order-2">
                            <h4>Chào Mừng K27 Đến Với {{accessToken}}</h4>
                            <h4 class="van-lang-gifts" style="color: red"> <strong> VAN LANG GIFTS </strong></h4>
                            <p>Nơi sinh viên Văn Lang trao nhau những món quà ý nghĩa.<br></p> <br> <a href="/introduce">ĐỌC THÊM</a>
                        </div>
                        <div class="col-md-6 col-12 order-md-2 order-2"><img src="/public/img/vanlangK27.jpg" class="mx-auto img-banner" alt="slide"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="mask flex-center">
                <div class="container-banner">
                    <div class="row align-items-center">
                        <div class="col-md-7 col-12 order-md-1 order-2">
                            <h4 style="color: red">1.000.000 Quà Tặng</h4>
                            <p>Là con số quà tặng Văn Lang Gifts hướng đến năm 2023</p> <br>
                        </div>
                        <div class="col-md-5 col-12 order-md-2 order-1"><img src="/public/img/vanlangQua.jpg" class="mx-auto" alt="slide"></div>
                    </div>
                </div>
            </div>
        </div>

    </div> <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev"> <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span> </a> <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next"> <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span> </a>
</div>

<!-- List Gifts -->
<div id="list-gifts">
    <div class="title-text">
        <p>List Gifts</p>
        <h1>Take And Give Gifts</h1>
    </div>
    <div class="row container-gift">

        {{#each gifts}}
        <div class="col-lg-4 mt-2 mb-4 item-gift ">
            <div class="card card-gift-item ">
                <a class="item-size-image" href="/gifts/{{this.slug}}">
                {{#with this.image.[0]}}
                    <img class="image-size-home" src="{{this}}" alt="{{this.name}}" >
                {{/with}}
                {{#with this.fileImages.[0]}}
                    <img class="image-size-home" src="/gifts/images/{{this}}" alt="{{this.name}}">
                {{/with}}
                </a>
                <div class="card-body">
                    <a href="/gifts/{{this.slug}}">
                        <p class="card-title" style="font-family:'Segoe UI'">Tên quà tặng:  {{this.name}}</p>
                    </a>
                    <p class="card-text" style="font-family:'Segoe UI'">Người tặng: {{this.author}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="title-text">
        <button class="btn btn-info btn-all-gifts">
            <a href="/gifts/show-all"><h4 style="font-weight: bold;">ALL GIFTS</h4></a>
        </button>
    </div>
</div>


