<script>
  document.addEventListener("DOMContentLoaded", function () {

    $(document).ready(function(){
        var setAuto = 3000;
        $('#myCarousel').carousel({
            interval: setAuto,
        })
        $('#myCarousel').click(function(setAuto){
            if(setAuto !== true){
                setAuto = true;
            } else {
                setAuto = 3000;
            }
        })
    });

    var itemSizeImage = document.getElementsByClassName('item-size-image');
    for (var i = 0; i < itemSizeImage.length; i++) {
        if (itemSizeImage[i].children[1] !== undefined) {
            itemSizeImage[i].children[1].style.display = 'none';
        }
    }
  } )
</script>